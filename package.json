{
  "name": "react-states",
  "version": "8.0.0-rc13",
  "description": "Explicit states for predictable user experiences",
  "author": "Christian Alfoni <christianalfoni@gmail.com>",
  "license": "MIT",
  "repository": "git+https://github.com/christianalfoni/react-states.git",
  "module": "index.js",
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./index.js"
    },
    "./devtools": {
      "import": "./devtools/index.js"
    }
  },
  "types": "index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc --outDir . --module esnext && tsc --outDir cjs --module commonjs",
    "clean": "del cjs devtools/*.ts devtools/*.js devtools/*.map *.d.ts  *.js *.map !jest.config.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier '**/*.{md,js,jsx,json,ts,tsx}' --write",
    "test": "jest --env=jsdom",
    "test:watch": "jest --env=jsdom --watch --updateSnapshot",
    "prebuild": "npm run clean",
    "postbuild": "rimraf {lib,es}/**/__tests__ {lib,es}/**/*.{spec,test}.{js,d.ts,js.map}",
    "posttest": "npm run typecheck",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prepublish": "yarn build"
  },
  "keywords": [
    "typescript",
    "react",
    "reducer",
    "state",
    "statemachine"
  ],
  "files": [
    "cjs",
    "devtools",
    "index.js",
    "index.js.map",
    "index.d.ts",
    "constants.d.ts",
    "constants.js",
    "constants.js.map",
    "hooks.d.ts",
    "hooks.js",
    "hooks.js.map",
    "utils.d.ts",
    "utils.js",
    "utils.js.map",
    "types.d.ts",
    "types.js",
    "types.js.map",
    "tools.d.ts",
    "tools.js",
    "tools.js.map"
  ],
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^23.0.0",
    "@types/node": "^8.0.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "del-cli": "^5.0.0",
    "dts-bundle": "^0.7.2",
    "jest": "^23.0.0",
    "pascal-case": "^2.0.1",
    "prettier": "^2.2.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "semver": "^6.3.0",
    "ts-jest": "~23.10.0",
    "tslib": "^2.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^4.7.3",
    "vite": "^2.0.5"
  }
}
