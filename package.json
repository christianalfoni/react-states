{
  "name": "react-states",
  "version": "8.1.0",
  "description": "Explicit states for predictable user experiences",
  "author": "Christian Alfoni <christianalfoni@gmail.com>",
  "license": "MIT",
  "repository": "git+https://github.com/christianalfoni/react-states.git",
  "module": "index.js",
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./index.js"
    }
  },
  "types": "index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc --outDir . --module esnext && tsc --outDir cjs --module commonjs",
    "clean": "rimraf cjs index.d.ts index.test.d.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier '**/*.{md,js,jsx,json,ts,tsx}' --write",
    "test": "jest --env=jsdom",
    "test:watch": "jest --env=jsdom --watch --updateSnapshot",
    "prebuild": "npm run clean",
    "postbuild": "rimraf {lib,es}/**/__tests__ {lib,es}/**/*.{spec,test}.{js,d.ts,js.map}",
    "posttest": "npm run typecheck",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prepublish": "yarn build"
  },
  "keywords": [
    "typescript",
    "react",
    "reducer",
    "state",
    "statemachine"
  ],
  "files": [
    "cjs",
    "index.js",
    "index.js.map",
    "index.d.ts"
  ],
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^2.6.1",
    "semver": "^6.3.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "@vitejs/plugin-react": "^4.2.1"
  }
}
