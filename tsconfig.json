{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": ".code",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist", "es", "lib", "demo-src", "vite.config.ts"]
}
